      "UpStreamPathTemplate": "/catalog/GetProductByCategoryName/{category}",
      "UpStreamHttpMethod": [ "GET" ]
    },
    {
      //DownStream
      "DownStreamPathTemplate": "/api/v1/catalog/GetProductByName/{name}",
